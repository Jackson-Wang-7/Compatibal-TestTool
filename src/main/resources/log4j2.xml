<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <File name="OUTPUT"
              fileName="./tool.log"
              append="true"
              immediateFlush="true"
              encoding="UTF-8">
            <PatternLayout>
                <Pattern>[%-22d{yyyy/MM/dd HH:mm:ss,SSS}][%t][%-5p]%c{1}[%M:%L]%m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="OUTPUT"/>
        </Root>
    </Loggers>
</Configuration>
